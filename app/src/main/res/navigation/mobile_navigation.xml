<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.thw.inventory_app.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_qrscanner"
        android:name="com.thw.inventory_app.ui.qrscanner.QRScannerFragment"
        android:label="@string/title_qrscanner"
        tools:layout="@layout/fragment_qrscanner" />

    <fragment
        android:id="@+id/navigation_items"
        android:name="com.thw.inventory_app.ui.notifications.ItemsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_items" />
